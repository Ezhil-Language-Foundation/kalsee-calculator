<?xml version="1.0" encoding="utf-8"?>
<ScrollView     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dip"
    tools:context="com.urbantamil.kalsee.KalseeActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="10pt"
        android:fontFamily="Catamaran_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_textview"
        android:text="@string/history_select_any" />

    <ListView
        android:fontFamily="Catamaran_Regular"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:id="@+id/history_listview"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/tamilfont_view_dismiss"
        android:layout_width="match_parent"
        android:text="@string/tamil_CLOSE"
        android:layout_height="50dip" />
</LinearLayout>
</ScrollView>