<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:id="@+id/parent_container"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/calc_edit_text"
        android:layout_width="match_parent"
        android:layout_weight="25"
        android:lines="1"
        android:maxLines="1"
        android:textSize="16pt"
        android:textStyle="bold"
        android:text="9876543210"
        android:outlineProvider="background"
        android:textAlignment="center"
        android:layout_height="wrap_content">
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical"
        android:orientation="vertical"
        android:layout_weight="75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20">

            <Button
                
                android:id="@+id/calc_btn_AC"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:textSize="14pt"
                android:text="அழி"
                android:layout_weight="25" />

            <Button
                
                android:id="@+id/calc_btn_pm"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                
                android:id="@+id/calc_btn_perc"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="%"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_div"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="16pt"
                android:layout_weight="25" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20">

            <Button
                
                android:id="@+id/calc_btn_7"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
               android:text="7"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                
                android:id="@+id/calc_btn_8"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="8"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_9"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="9"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_mul"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:textSize="16pt"
                android:text="\u00D7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20">

            <Button
                

                android:id="@+id/calc_btn_4"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="4"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_5"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="5"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_6"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="6"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_sub"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:textSize="16pt"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20">

            <Button
                

                android:id="@+id/calc_btn_1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="1"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="2"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_3"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="3"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_add"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:textSize="16pt"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="fill_vertical"
            android:layout_weight="20">

            <Button
                

                android:id="@+id/calc_btn_0"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="16pt"
                android:layout_weight="25" />

            <Button
                

                android:id="@+id/calc_btn_dot"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:textSize="16pt"
                android:text="." />

            <Button
                

                android:id="@+id/calc_btn_equals"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="="
                android:textSize="16pt"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>